package net.meme.tile;

import java.awt.Graphics;
import java.awt.image.BufferedImage;

import net.meme.Display;
import net.meme.Game;

public abstract class Tile {
	
	public float x, y;
	public BufferedImage tex;
	
	public Tile(int x, int y, BufferedImage tex){
		this.x = x*32;
		this.y = y*32;
		this.tex = tex;
	}
	
	public abstract void tick(Game game);
	
	public void render(Game game, Graphics g){
		g.drawImage(tex, (int)(Display.scale*(x-game.player.x)), (int)(Display.scale*(y-game.player.y)), null);
	}

}
