package me.ryan;

import java.awt.Dimension;
import java.awt.Graphics;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class Display extends JPanel implements Runnable {
	
	private static final long serialVersionUID = 1L;
	
	public static final int width = 320, height = 240;
	public static final int scale = 3;
	public static final int actualWidth = (int) (width*scale), actualHeight = (int) (height*scale);
	public static int fpsCap = 1500;
	
	public static final int tilesize = 16;
	public static final int actualTilesize = (int) (tilesize*scale);

	public static final String title = "Chamber Crawler";
	public static String name = System.getProperty("user.name");
		
	public static Display instance;
			
	private Thread thread;
			
	private boolean running = false;
		
	public Game game;

	public int fps;
	public int tps;
				
	private Display(){
		init();
		start();
	}
	
	private void init(){
		Dimension size = new Dimension(actualWidth, actualHeight);
		this.setPreferredSize(size);
		this.setMaximumSize(size);
		this.setMinimumSize(size);
		
		game = new Game();
		this.addKeyListener(game.input);
		this.addMouseListener(game.input);
		this.addMouseMotionListener(game.input);
		
		JFrame frame = new JFrame(title);
		frame.add(this);
		frame.setResizable(false);
		frame.pack();
		frame.addKeyListener(game.input);
		frame.addMouseListener(game.input);
		frame.addMouseMotionListener(game.input);
		frame.setLocationRelativeTo(null);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
	}
	
	public synchronized void start(){
		if(running) return;
		running = true;
	
		if(thread == null) thread = new Thread(this);
				
		thread.start();
	}
	
	public synchronized void stop(){
		if(!running) return;
		running = false;
		
		try {
			thread.join();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}

	//tick
	@Override
	public void run() {
		long lastTime = System.nanoTime();
		double nsPerTick = 1000000000D / fpsCap;
		
		int ticks = 0;
		int frames = 0;
		
		long lastTimer = System.currentTimeMillis();
		double delta = 0;
		
		while(running){
			long now = System.nanoTime();
			delta += (now - lastTime) / nsPerTick;
			lastTime = now;
			
			boolean shouldRender = false;
			
			while(delta >= 1){
				ticks++;
				tick();
				delta--;
				shouldRender = true;
			}
			
			try {
				Thread.sleep(2);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			
			if(shouldRender){
				frames++;
				repaint();
			}
			
			if(System.currentTimeMillis() - lastTimer >= 1000){
				lastTimer += 1000;
				
				fps = frames;
				tps = ticks;
				
				frames = 0;
				ticks = 0;
			}
		}
		
		stop();
	}
	
	private void tick(){
		game.tick();
	}
	
	private void render(Graphics g){	
		g.fillRect(0, 0, actualWidth, actualHeight);
		game.render(g);
	}
	
	public void paint(Graphics g){
		render(g);
	}
	
	public static void main(String[] args){
		instance = new Display();
	}

}
