package net.meme;

import java.awt.Graphics;
import java.awt.event.KeyEvent;

public class Player {
	
	public float x = 0, y = 0;
	public boolean cameraMoving = false;
	
	public void tick(Game game){
		if(game.input.keys[KeyEvent.VK_A]) x-=1;
		if(game.input.keys[KeyEvent.VK_D]) x-=1;
		
		if(x < 13*32) cameraMoving = false;
		else cameraMoving = true;
	}
	
	public void render(Graphics g){
		g.setColor(Color.red);
		if(cameraMoving) g.drawRect(368*Display.scale, 504*Display.scale, width, height);
	}

}
